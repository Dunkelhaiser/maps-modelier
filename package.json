{
    "name": "maps-modelier-desktop",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "main": "dist/electron/main.js",
    "scripts": {
        "dev:client": "vite",
        "dev:electron": "pnpm run build:electron && electron .",
        "start": "electron .",
        "build:electron": "tsc --project src/electron/tsconfig.json && copyfiles ./src/electron/db/migrations/**/* -u 3 ./dist/electron/db && copyfiles ./src/electron/db/migrations/* -u 3 ./dist/electron/db",
        "build:client": "tsc -b && vite build",
        "build": "pnpm run build:electron && pnpm run build:client",
        "rebuild": "electron-rebuild -f -m ./node_modules/better-sqlite3",
        "dist:win": "electron-builder --win --x64",
        "dist:mac": "electron-builder --mac --arm64",
        "dist:macI": "electron-builder --mac --x64",
        "dist:linux": "electron-builder --linux --x64",
        "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --fix --report-unused-disable-directives --max-warnings 0",
        "format": "prettier -uw --cache --ignore-path .gitignore .",
        "preview": "vite preview",
        "prepare": "husky",
        "db:generate": "drizzle-kit generate --config=\"./src/electron/db/drizzle.config.ts\"",
        "db:migrate": "node --import=tsx ./src/electron/db/migrate.ts",
        "db:drop": "drizzle-kit drop --config=\"./src/electron/db/drizzle.config.ts\""
    },
    "lint-staged": {
        "./src/**/*": "prettier -uw --cache",
        "./src/**/*.{ts,tsx}": "eslint --fix --report-unused-disable-directives --max-warnings 0"
    },
    "dependencies": {
        "@napi-rs/canvas": "^0.1.59",
        "@napi-rs/canvas-win32-x64-msvc": "^0.1.60",
        "@pixi/events": "^7.4.2",
        "@pixi/react": "^7.1.2",
        "@pixi/unsafe-eval": "^7.4.2",
        "@radix-ui/react-dialog": "^1.1.2",
        "@radix-ui/react-dropdown-menu": "^2.1.2",
        "@radix-ui/react-label": "^2.1.0",
        "@radix-ui/react-select": "^2.1.2",
        "@radix-ui/react-slot": "^1.1.0",
        "better-sqlite3": "^11.5.0",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "dotenv": "^16.4.5",
        "drizzle-orm": "^0.36.0",
        "lucide-react": "^0.454.0",
        "pixi.js": "^7.4.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwind-merge": "^2.5.4",
        "tailwindcss-animate": "^1.0.7",
        "zustand": "^5.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@electron/rebuild": "^3.7.0",
        "@eslint/js": "^9.11.1",
        "@types/better-sqlite3": "^7.6.11",
        "@types/node": "^22.8.4",
        "@types/react": "^18.3.10",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "autoprefixer": "^10.4.20",
        "copyfiles": "^2.4.1",
        "drizzle-kit": "^0.27.0",
        "electron": "^33.0.2",
        "electron-builder": "^25.1.8",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.10.0",
        "eslint-plugin-react": "^7.37.1",
        "eslint-plugin-react-hooks": "5.1.0-rc-fb9a90fa48-20240614",
        "eslint-plugin-react-refresh": "^0.4.12",
        "eslint-plugin-tailwindcss": "^3.17.5",
        "globals": "^15.9.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "postcss": "^8.4.47",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.8",
        "tailwindcss": "^3.4.14",
        "tsx": "^4.19.2",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.10.0",
        "vite": "^5.4.8",
        "vite-tsconfig-paths": "^5.0.1"
    }
}
