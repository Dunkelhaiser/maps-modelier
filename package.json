{
    "name": "maps-modelier",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --fix --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "format": "prettier -uw --cache --ignore-path .gitignore .",
        "preview": "vite preview",
        "prepare": "husky",
        "db:generate": "drizzle-kit generate --config=\"./src/db/drizzle.config.ts\"",
        "db:migrate": "node --import=tsx ./src/db/migrate.ts",
        "db:drop": "drizzle-kit drop --config=\"./src/db/drizzle.config.ts\""
    },
    "lint-staged": {
        "./src/**/*": "prettier -uw --cache",
        "./src/**/*.{ts,tsx}": "eslint --fix --report-unused-disable-directives --max-warnings 0"
    },
    "dependencies": {
        "@electric-sql/pglite": "^0.2.12",
        "@electric-sql/pglite-react": "^0.2.12",
        "@radix-ui/react-dialog": "^1.1.2",
        "@radix-ui/react-icons": "^1.3.0",
        "@radix-ui/react-label": "^2.1.0",
        "@radix-ui/react-slot": "^1.1.0",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "drizzle-orm": "^0.36.0",
        "lucide-react": "^0.454.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwind-merge": "^2.5.4",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@eslint/js": "^9.11.1",
        "@types/node": "^22.8.4",
        "@types/react": "^18.3.10",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "autoprefixer": "^10.4.20",
        "drizzle-kit": "^0.27.0",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.10.0",
        "eslint-plugin-react": "^7.37.1",
        "eslint-plugin-react-hooks": "5.1.0-rc-fb9a90fa48-20240614",
        "eslint-plugin-react-refresh": "^0.4.12",
        "eslint-plugin-tailwindcss": "^3.17.5",
        "globals": "^15.9.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "postcss": "^8.4.47",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.8",
        "tailwindcss": "^3.4.14",
        "tsx": "^4.19.2",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.10.0",
        "vite": "^5.4.8",
        "vite-tsconfig-paths": "^5.0.1"
    }
}
